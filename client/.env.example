# Client Environment Variables
VITE_API_URL=http://localhost:3000/api/v1
VITE_APP_NAME=Turtle Sales
VITE_APP_VERSION=1.0.0

# Development settings
VITE_NODE_ENV=development
VITE_DEBUG=true
VITE_CLIENT_URL=http://localhost:5173

# Vite Server Configuration (optional overrides)
# VITE_PORT=5173
# VITE_HOST=0.0.0.0
# VITE_HMR_PORT=5173
# VITE_HMR_HOST not needed - Vite auto-detects host from page URL

# React settings
REACT_APP_SUPPRESS_HYDRATION_WARNING=true

# Production settings (uncomment for production)
# VITE_API_URL=https://your-production-api.com/api/v1
# VITE_NODE_ENV=production
# VITE_DEBUG=false
# VITE_CLIENT_URL=https://your-production-client.com
# VITE_PORT=8080
# VITE_HOST=0.0.0.0

# Staging settings (uncomment for staging)
# VITE_API_URL=https://staging-api.com/api/v1
# VITE_NODE_ENV=staging
# VITE_DEBUG=true
# VITE_CLIENT_URL=https://staging.com
# VITE_PORT=3001
